{
	"name": "Clippr",
	"description": "Automatically shorten your links as you copy them!",
	"version": "3.0",
	"manifest_version": 2,
	"minimum_chrome_version": "5.0",
	"permissions": [
		"clipboardRead",
		"clipboardWrite",
		"contextMenus",
		"notifications",
		"storage",
		"tabs"
	],
	"background": {
		"scripts": [
			"js/jquery.js",
			"js/background.js"
		]
	},
	"icons": {

	},
	"content_scripts": [
		{
			"matches": [ "*://*/*" ],
			"js": [ "js/clippr.js" ]
		}
	],
	"options_page": "options/index.html"
}